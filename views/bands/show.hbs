<div class="row">
  <div class="col s12">
    <h3>{{band.artist}}
      <small>{{{editIcon band.user user band._id false true "band"}}}</small>
    </h3>

    <table class="responsive-table">
      <thead>
        <tr>
          <th>Artist</th>
          <th>State</th>
          <th>City</th>
          <th>Genre</th>
          <th>Status</th>
          <th>Social Media</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{band.artist}}</td>
          <td>{{band.state}}</td>
          <td>{{band.city}}</td>
          <td>{{band.genre}}</td>
          <td>{{band.status}}</td>
          <td><a href="{{band.socialmedia}}" target="_blank">{{stripUrl
                band.socialmedia
              }}</a></td>
          <td>{{formatDate band.createdAt "MMMM Do, YYYY"}}</td>
          <td>{{{deleteIcon band.user user band._id "band"}}}</td>
        </tr>

      </tbody>

      {{!--  <div class="card-content">
        <span class="card-title">{{formatDate
            date
            "MMMM Do YYYY, h:mm:ss a"
          }}</span>

      </div> --}}

    </table>
  </div>
</div>
<div class="row">

  <div class="col s6 m2 right">
    <div class="card grey darken-3 center-align">
      <div class="card-content">
        <a href="/profile/{{band.user._id}}">

          <span class="card-title">{{band.user.displayName}}</span></a>
        {{!Change: add 'referrerpolicy="no-referrer"' to stop Google from blocking access to the profile images}}
        <a href="/profile/{{band.user._id}}">
          <img
            src="{{band.user.image}}"
            referrerpolicy="no-referrer"
            class="circle responsive-img img-small"
          />
        </a>
      </div>
      <div class="card-action">
        <a href="/bands/user/{{band.user._id}}">More From
          {{band.user.firstName}}</a>
      </div>

    </div>

  </div>
  <div class="col s6 m6">
    {{{band.image}}}
  </div>
</div>