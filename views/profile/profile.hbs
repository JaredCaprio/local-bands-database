<div class="container">
  <div class="row">
    <div class="col s12 m6 l6 xl6">
      <div class="card grey darken-3">
        <div class="card-content">
          <span class="card-title">
            <img
              class="materialboxed"
              src="{{user.image}}"
              height="150"
              referrerpolicy="no-referrer"
              alt=""
            /></span>
          <h2>{{user.displayName}}</h2>
          <p>{{user.bio}}</p>
        </div>
      </div>
      <div
        class="card grey darken-3 center"
        style="max-height: 20rem; overflow-y: scroll;"
      >
        <div class="card-content">
          <span class="card-title">{{user.firstName}}'s contributions</span>
          <div
            style="font-size: 20px;"
            data-bands-tab
            class="chip grey darken-2 hoverable"
          >
            <a href="#">Bands</a>
          </div>
          <div
            style="font-size: 20px;"
            data-venues-tab
            class="chip grey darken-3 hoverable"
          >
            <a href="#">Venues</a>
          </div>

          <table data-bands-table class="stripped">
            <tbody>
              {{#each bands}}
                <tr>
                  <td><a href="/bands/{{_id}}">{{artist}}</a></td>
                </tr>
              {{/each}}
            </tbody>
          </table>

          <table data-venues-table class="stripped hide">
            <tbody>
              {{#each venues}}
                <tr>
                  <td><a href="/venues/{{_id}}">{{name}}</a></td>
                </tr>
              {{/each}}
            </tbody>
          </table>

        </div>
      </div>
    </div>
    <div class="col s12 m6 l6 xl6">
      <div class="card grey darken-3">
        <div class="card-content">
          <h3 class="card-title">General Info</h3>

          <small>First Name</small>
          <p>{{user.firstName}}</p>
          <small>Last Name</small>
          <p>{{user.lastName}}</p>
          <small>City</small>
          <p>{{user.city}}</p>
          <small>State</small>
          <p>{{user.state}}</p>
          {{#if user.showAge}}
            <small>Age</small>
            <p>{{calculateAge user.birthday "MMMM Do, YYYY"}}</p>
          {{/if}}
          {{#if user.showBirthday}}
            <small>Birthday</small>
            <p>{{formatDate user.birthday "MMMM Do, YYYY"}}</p>
          {{/if}}
          <small>Gender</small>
          <p>{{user.gender}}</p>
        </div>
      </div>

      <div class="card grey darken-3">
        <div class="card-content">
          <h3 class="card-title">Social Media</h3>
          <small>Facebook</small>
          <p><a href="{{user.facebook}}">{{user.facebook}}</a></p>
          <small>Instagram</small>
          <p><a href="{{user.facebook}}">{{user.instagram}}</a></p>
          <small>Twitter</small>
          <p><a href="{{user.facebook}}">{{user.twitter}}</a></p>

        </div>
      </div>
    </div>
  </div>
</div>
<div class="fixed-action-btn">

  {{{profileEditIcon user._id loggedUser._id}}}

</div>

<script src="/js/profile.js"></script>
<script src="/js/materialize-init.js"></script>