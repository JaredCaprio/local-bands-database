<form action="updateProfile/{{user._id}}" method="post">
  <input type="hidden" name="_method" value="PUT" />
  <div class="container">
    <div class="row">
      <div class="col s12 m6 l6 xl6">
        <div class="card grey darken-3">
          <div class="card-content">
            <span class="card-title">
              <img src="{{user.image}}" height="150" alt="" />
            </span>
            <div class="row">
              <div class="input-field">
                <label for="displayName">Dispaly Name</label>
                <input
                  type="text"
                  id="displayName"
                  name="displayName"
                  value="{{user.displayName}}"
                /></div>
            </div>

            <div class="input-field">
              <textarea
                class="materialize-textarea"
                rows="250"
                cols="50"
                maxlength="1000"
                name="bio"
              >{{user.bio}}</textarea>
            </div>
          </div>
        </div>
      </div>
      <div class="col s12 m6 l6 xl6">
        <div class="card grey darken-3">
          <div class="card-content">
            <div class="row">
              <h3 class="card-title">General Info</h3>
            </div>
            <div class="row">
              <div class="input-field">
                <label for="firstName">First Name</label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  value="{{user.firstName}}"
                />
              </div>
            </div>
            <div class="row">
              <div class="input-field">
                <label for="lastName">Last Name</label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  value="{{user.lastName}}"
                />
              </div>
            </div>
            <div class="row">
              <div class="input-field">
                <label for="city">City</label>
                <input
                  type="text"
                  id="city"
                  name="city"
                  value="{{user.city}}"
                />
              </div>
            </div>
            <div class="row">
              <div class="input-field">
                <label for="state">State</label>
                <input
                  type="text"
                  id="state"
                  name="state"
                  value="{{user.state}}"
                />
              </div>
            </div>
            <div class="row">
             {{!--  <div class="input-field">
                <label for="age">Age</label>
                <input type="text" id="age" name="age" value="{{user.age}}" />
              </div> --}}
          
            </div>
            <div class="row">
              <div class="input-field">

                <input
                  type="date"                  
                  id="birthday"
                  name="birthday"
                  value="{{formatDate user.birthday 'YYYY-MM-DD'}}"
                />
                
                <label for="birthday">Birthday</label>

              </div>
              <label>
                <input
                  class="data-show-birthday"
                  type="checkbox"
                  name="showBirthday"
                  autocomplete="off"
                  {{#if user.showBirthday}}
                  checked="checked"
                  {{/if}}
                />
                <span>Show birthday on profile</span>
              </label>
              <br>
                <label>
                <input
                  class="data-show-age"
                  type="checkbox"
                  name="showAge"
                  autocomplete="off"
                  {{#if user.showAge}}
                  checked="checked"
                  {{/if}}
                />
                <span>Show age on profile</span>
              </label>

            </div>
            <div class="row">

            </div>
            <div class="row">
              <div class="input-field">
                <label for="gender">Gender</label>
                <input
                  type="text"
                  id="gender"
                  name="gender"
                  value="{{user.gender}}"
                />
              </div>
            </div>
          </div>
        </div>
        <div class="card grey darken-3">
          <div class="card-content">
            <div class="row">
              <h3 class="card-title">Social Media</h3>
            </div>
            <input type="hidden" name="_method" value="PUT" />
            <div class="row">
              <div class="input-field">
                <label for="facebook">Facebook</label>
                <input
                  type="text"
                  id="facebook"
                  name="facebook"
                  value="{{user.facebook}}"
                />
              </div>
            </div>

            <div class="row">
              <div class="input-field">
                <label for="instagram">Instagram</label>
                <input
                  type="text"
                  id="instagram"
                  name="instagram"
                  value="{{user.instagram}}"
                />
              </div>
            </div>
            <div class="row">
              <div class="input-field">
                <label for="twitter">Twitter</label>
                <input
                  type="text"
                  id="twitter"
                  name="twitter"
                  value="{{user.twitter}}"
                />
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
    <div class="row fixed-action-btn">
      <button
        type="submit"
        value="Save"
        class="btn-floating btn-large waves-effect waves-light blue"
      > <i class="fa-solid fa-floppy-disk"></i></button>
      <button class="btn-floating btn-large waves-effect waves-light orange"><a
          href="/profile/{{user._id}}"
        ><i class="fa-solid fa-xmark"></i></a></button>
    </div>
  </div>
</form>