<div class="row">
  <div class="col s12">
    <h3>{{venue.name}}
      <small>{{{editIcon venue.user user venue._id false true "venue"}}}</small>
    </h3>
    <table class="responsive-table">
      <thead>
        <tr>
          <th>Artist</th>
          <th>State</th>
          <th>City</th>
          <th>Address</th>
          <th>Status</th>
          <th>Website</th>
          <th>Added By</th>
          <th>Date Added</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{venue.name}}</td>
          <td>{{venue.state}}</td>
          <td>{{venue.city}}</td>
          <td>{{venue.address}}</td>
          <td>{{venue.status}}</td>
          <td><a target="_blank" href="{{venue.website}}">{{stripUrl
                venue.website
              }}</a></td>
          <td><a
              href="/profile/{{venue.user._id}}"
            >{{venue.user.displayName}}</a></td>
          <td>{{formatDate venue.createdAt "MMMM Do, YYYY"}}</td>

          <td>{{{deleteIcon venue.user user venue._id "venue"}}}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<input
  type="hidden"
  id="lat"
  name="lat"
  class="show-lat"
  value="{{venue.lat}}"
/>
<input
  type="hidden"
  id="lng"
  name="lng"
  class="show-lng"
  value="{{venue.lng}}"
/>
